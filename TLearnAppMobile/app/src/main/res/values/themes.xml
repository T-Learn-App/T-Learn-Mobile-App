<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TLearnAppMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">#FFD700</item>
        <item name="colorPrimaryVariant">#FFC700</item>
        <item name="colorOnPrimary">#000000</item>

        <item name="colorSecondary">#FFD700</item>
        <item name="colorSecondaryVariant">#FFC700</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Цвета фона -->
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- Текст -->
        <item name="android:textColor">@android:color/black</item>

        <!-- Убираем ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Полноэкранный режим -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Статус бар -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>
